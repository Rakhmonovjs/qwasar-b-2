<div id="<%= dom_id document %>" class="doc_wrap">
  <p>
    <strong class="doc_title">Title:</strong>
    <%= document.title %>
  </p>

  
  <% if document.doc.attached? %>
    <%= link_to document.doc.filename,  rails_blob_path(document.doc, disposition: "attachment"), class: "doc_file-upload" %>
  <% end %>
  

</div>


<style>
  .doc_wrap{
     width: 500px;
      padding: 0 20px;
      padding-bottom: 16px;
      border: 1px solid grey;
      border-radius: 15px;
      background-color: #f5fffa;
  }
  .doc_title{
    margin: 0;
  }
  .doc_file-upload{
    text-decoration: none;
  }

  .doc_file-upload {
    background: #fff;
    backface-visibility: hidden;
    border-radius: 10px;
    border-style: solid;
    border-width: 1.5px;
    box-sizing: border-box;
    color: #212121;
    cursor: pointer;
    display: inline-block;
    font-family: Circular,Helvetica,sans-serif;
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 1;
    line-height: 1.3;
    padding: 8px 10px;
    position: relative;
    text-align: left;
    text-decoration: none;
    transform: translateZ(0) scale(1);
    transition: transform .2s;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
  }

  .doc_file-upload:not(:disabled):hover {
    transform: scale(1.05);
  }

  .doc_file-upload:not(:disabled):hover:active {
    transform: scale(1.05) translateY(.125rem);
  }

  .doc_file-upload:focus {
    outline: 0 solid transparent;
  }

  .doc_file-upload:focus:before {
    content: "";
    left: calc(-1*.375rem);
    pointer-events: none;
    position: absolute;
    top: calc(-1*.375rem);
    transition: border-radius;
    user-select: none;
  }

  .doc_file-upload:focus:not(:focus-visible) {
    outline: 0 solid transparent;
  }

  .doc_file-upload:focus:not(:focus-visible):before {
    border-width: 0;
  }

  .doc_file-upload:not(:disabled):active {
    transform: translateY(.125rem);  
  }
</style>