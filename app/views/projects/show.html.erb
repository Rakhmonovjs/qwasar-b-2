<p style="color: green"><%= notice %></p>

<div class="created_project-wrap">
  <%= render @project %>

  <div class="wrap_creat">
    <div class="edit_back-wrap">
      <%= link_to "Edit this project", edit_project_path(@project), class: "edit_project" %>
      <%= button_to "Destroy this project", @project, method: :delete, class: "destroy_project" %>
      <%= link_to "Back to projects", projects_path, class: "back_project" %>
    </div>
  </div>

  <div class="links">
    <%= link_to  "Message Boards", project_buckets_path(@project), class: "links_link links_message" %> <br>
    <%= link_to  "Tasks", project_lists_path(@project), class: "links_link links_tasks" %> <br>
    <%= link_to  "Attachments", project_documents_path(@project), class: "links_link links_attach" %>
  </div>
</div>

