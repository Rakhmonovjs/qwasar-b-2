<%= form_with(model: list, id: "#{dom_id(list)}_form") do |form| %>
    <%= form.text_field :title, class: "", placeholder: "Add a new todo", required: true, class: "todo_inp" %>
    <%= form.text_field :project_id, value: Project.find(params[:project_id]).id, type: :hidden %>
    <%= form.submit class: "btn btn-primary", class: "todo_btn" %>
<% end %>


<style> 
    .todo_inp{
        width: 200px;
        padding: 12px 20px;
        /* margin-top: 10px; */
        margin-bottom: 50px;
        display: inline-block;
        border: 1px solid #191970;
        border-radius: 10px;
        box-sizing: border-box;
        outline: none;
    }
    .todo_inp:focus{
        box-shadow: 5px 10px 20px #e6e6fa;
    }

    .todo_btn {
        appearance: none;
        backface-visibility: hidden;
        background-color: #27ae60;
        border-radius: 8px;
        border-style: none;
        box-shadow: rgba(39, 174, 96, .15) 0 4px 9px;
        box-sizing: border-box;
        color: #fff;
        cursor: pointer;
        display: inline-block;
        font-family: Inter,-apple-system,system-ui,"Segoe UI",Helvetica,Arial,sans-serif;
        font-size: 12px;
        font-weight: 600;
        letter-spacing: normal;
        line-height: 1.3;
        outline: none;
        overflow: hidden;
        margin-bottom: 50px;
        margin-left: 20px;
        padding: 12px 15px;
        position: relative;
        text-align: center;
        text-decoration: none;
        transform: translate3d(0, 0, 0);
        transition: all .3s;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        vertical-align: top;
        white-space: nowrap;
    }

    .todo_btn:hover {
        background-color: #1e8449;
        opacity: 1;
        transform: translateY(0);
        transition-duration: .35s;
    }

    .todo_btn:active {
        transform: translateY(2px);
        transition-duration: .35s;
    }

    .todo_btn:hover {
        box-shadow: rgba(39, 174, 96, .2) 0 6px 12px;
    }
</style>
